<header id="header">
  <div class="header-content clear">
    <h1 id="logo-wrap">
      <img src="<%- url_for('/img/hcysun.png') %>">
      <a href="<%- url_for() %>" class="title"><%= config.title %></a>
    </h1>
    <nav class="main-nav">
      <% for (var i in theme.menu){ %>
        <a href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
      <% } %>
    </nav>
    <div class="search-box">
      <img src="<%- url_for('/img/search.png') %>">
    </div>
    <div class="sm-nav-bar">
      <i class="fa fa-bars" aria-hidden="true"></i>
    </div>
    <% if (is_post()) { %>
      <div class="sm-nav-toc">显示目录</div>
    <% } %>
  </div>
  <div class="search-input">
    <%- search_form({class: 'search-input-el'}) %>
  </div>
  <div class="sm-nav">
    <% for (var i in theme.menu){ %>
      <a href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
    <% } %>
    <%- search_form({class: 'sm-search-input-el'}) %>
  </div>
</header>